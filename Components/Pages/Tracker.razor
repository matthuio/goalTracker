@page "/"
@using GoalTrackerServices
@using goalTracker.Components.TrackerComponents
@rendermode InteractiveServer
@inject GoalServices GoalService

<InputSection OnSubmit="CreateGoal"></InputSection>

@code {
    public void CreateGoal(Goal goal)
    {
        if(goal.Title != null)
        {
            GoalService.CreateGoal(goal.Title,goal.Desc,goal.CompleteCondition);
            return;
        }
    }
}
